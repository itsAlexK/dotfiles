#!/bin/zsh

export FZF_COMPLETION_TRIGGER='--'
export FZF_DEFAULT_OPTS='--height 60%  --border'

FZF_DEFAULT_COMMAND='rg--no-ignore --hidden --follow -g "!{.git,node_modules,venv}/*" 2> /dev/null'

alias preview='fzf  --preview="bat {} -r 0:100 --color=always --style=numbers"'

# fh - repeat history
hf() {
  print -z $( ([ -n "$ZSH_NAME" ] && fc -l 1 || history) | fzf +s -i --tac | sed -E 's/ *[0-9]*\*? *//' | sed -E 's/\\/\\\\/g')
}
