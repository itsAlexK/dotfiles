# focus window
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

# swap window
shift + alt + ctrl + cmd - h : chunkc tiling::window --swap west
shift + alt + ctrl + cmd - j : chunkc tiling::window --swap south
shift + alt + ctrl + cmd - k : chunkc tiling::window --swap north
shift + alt + ctrl + cmd - l : chunkc tiling::window --swap east

# move window
shift + cmd - h : chunkc tiling::window --warp west
shift + cmd - j : chunkc tiling::window --warp south
shift + cmd - k : chunkc tiling::window --warp north
shift + cmd - l : chunkc tiling::window --warp east

# make floating window fill left-half of screen
cmd - f1   : chunkc tiling::window --grid-layout 1:2:0:0:1:1

# make floating window fill right-half of screen
cmd - f2  : chunkc tiling::window --grid-layout 1:2:1:0:1:1

# send window to monitor and follow focus

shift + alt + ctrl + cmd - 1  : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1
shift + alt + ctrl + cmd - 2  : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2
shift + alt + ctrl + cmd - 3  : chunkc tiling::window --send-to-monitor 3; chunkc tiling::monitor -f 3

# increase region size
shift + alt + ctrl + cmd - a : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
shift + alt + ctrl + cmd - s : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
shift + alt + ctrl + cmd - w : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
shift + alt + ctrl + cmd - d : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# mirror tree y-axis
shift + alt + ctrl + cmd - y : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
shift + alt + ctrl + cmd - x : chunkc tiling::desktop --mirror horizontal

# toggle window split type
shift + alt + ctrl + cmd - e : chunkc tiling::window --toggle split

# float / unfloat window and center on screen
shift + alt + ctrl + cmd - f : chunkc tiling::window --toggle float;\
          chunkc tiling::window --grid-layout 4:4:1:1:2:2

# rotate tree
shift + alt + ctrl + cmd - r : chunkc tiling::desktop --rotate 90

# toggle window fullscreen
shift + alt + ctrl + cmd - space : chunkc tiling::window --toggle fullscreen